%head
  %link{:href => "http://fonts.googleapis.com/css?family=Varela+Round", :rel => "stylesheet", :type => "text/css"}
  %link{:href => "http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css", :rel => "stylesheet"}
  %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"}
  %script{:src => "http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"}

%body
  .container-fluid
    .content-box
      .row
        .title-text.text-center
          .driver-info
            -if @num_ahead==0 && @driver.rider_available?
              %h1 Close to your car?
              </br>
              .sub-title
                Waiting for passenger to confirm pickup
                </br>
                %p ...one sec
            -else
              %h1 Nobody needs a ride rn...
              .sub-title
                You're waiting for ride requests
              .row.small-txt
                </br>
                There are #{@num_ahead} drivers waiting to pick up people ahead of you.
                </br>
                </br>
                =link_to "I'm Done Waiting.", [@user,@driver], method: :delete, :class => "not-btn-btn"
