%head
  %link{:href => "http://fonts.googleapis.com/css?family=Varela+Round", :rel => "stylesheet", :type => "text/css"}
  %link{:href => "http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css", :rel => "stylesheet"}
  %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"}
  %script{:src => "http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"}

%body
  .container-fluid
    .content-box
      .row
        .title-text.text-center
          %h2 Got a problem?
          </br>
          .sub-title
            Please tell us what happened, 
            </br>
            we want to know.
            </br>
            </br>
          .problem-form.form-group
            %textarea.form-control{:rows => "3", placeholder: 'What? When? Who? Is there a solution...?'}
            </br>
            =link_to "Submit", welcome_user_path(@user), :class => "row main-btn btn btn-default"
            </br>
            =link_to "Cancel", welcome_user_path(@user), :class => "not-btn-btn smaller-txt" 
            
