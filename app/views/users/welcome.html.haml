%head
  %link{:href => "http://fonts.googleapis.com/css?family=Varela+Round", :rel => "stylesheet", :type => "text/css"}
  %link{:href => "http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css", :rel => "stylesheet"}
  %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"}
  %script{:src => "http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"}

%body
  .container-fluid
    .content-box
      .row
        .title-text
          .welcome
            -#TODO change this to just first name -- parse out first word
            %h1 Welcome back, #{@user.name}!
        -if @user_is_a_driver
          .row.spacing
            .btn.btn-default.col-md-6.col-md-offset-3
              =form_for ([@user, Driver.new]) do |f|
                =f.submit "Ready to Drive!"
        .row.spacing
          .btn.btn-default.col-md-6.col-md-offset-3
            =form_for ([@user, Rider.new]) do |f|
              =f.submit "Request a ride!"
        .row.spacing
          .btn.btn-default.col-md-6.col-md-offset-3
            =link_to "Report a problem.", :class=>"main-btn"
        .row.spacing
          .btn.btn-default.col-md-6.col-md-offset-3
            =link_to "View Account.", edit_user_path(@user), {:class=>"main-btn"}
